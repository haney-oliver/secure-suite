{
    "manifest_version": 2,
    "name": "smss",
    "version": "0.1",
    "description": "Keeps you and your secrets safe on the internet.",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": "secure-suite-logo-shadowless.svg",
        "default_title": "Secure Suite"
    }
}